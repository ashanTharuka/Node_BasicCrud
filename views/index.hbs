<div class="container">
    <div class="row">
        <h2 >Add User</h2>

        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form class="form-horizontal" action="addUser" method="post">

                <div class="form-group">
                    <label class="control-label col-sm-2" for="fname">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fname" placeholder="Enter first name" name="fname">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="lname">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lname" placeholder="Enter first name" name="lname">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="prof">Professions:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="prof" placeholder="Enter Professions" name="prof">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>

<!--<hr>-->

    <div class="row">
        <h2>User Table</h2>
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Professions</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <!--load data to table-->
                {{#each users}}

                <tr>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.professions}}</td>
                    <td>
                        <a href="/edit/{{this.id}}"> <button class="btn btn-primary">Edit</button></a>
                        <a href="/deleteUser/{{this.id}}"> <button class="btn btn-success">Delete</button></a>
                    </td>
                </tr>

                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>