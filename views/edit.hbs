
<div class="container">
    <br/>
    <div class="row">
        <h2 >Update User</h2>

        <div class="col-md-2"></div>
        <div class="col-md-8">
            {{#each userData}}
            <form class="form-horizontal" action="/updateUser/{{this.id}}" method="post">

                <div class="form-group">
                    <label class="control-label col-sm-2" for="fname">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fname" placeholder="Enter first name" name="fname" value="{{this.firstName}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="lname">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lname" placeholder="Enter first name" name="lname" value="{{this.lastName}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="{{this.email}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="prof">Professions:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="prof" placeholder="Enter Professions" name="prof" value="{{this.professions}}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </form>
            {{/each}}
        </div>
        <div class="col-md-2"></div>
    </div>

</div>



